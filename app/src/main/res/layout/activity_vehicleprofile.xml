<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/bg"
    tools:context="com.example.kishan.digicheck3.VehicleProfile">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px">
        <TableRow android:id="@+id/vp_row1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView android:id="@+id/vp_aadharno"/>
        </TableRow>
        <TableRow android:id="@+id/vp_row2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px">
            <TextView android:text="@string/vplbl_vehiclelist"
                android:layout_height="wrap_content"/>
            </TableRow>
        <TableRow android:id="@+id/vp_row3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px">
            <ListView android:id="@+id/vp_vlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </ListView>
        </TableRow>
    </TableLayout>

</RelativeLayout>
